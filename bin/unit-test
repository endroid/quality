#!/usr/bin/env bash

set -e

export SYMFONY_DEPRECATIONS_HELPER=weak

if [ -f bin/phpunit ]; then
    bin/phpunit
    exit
fi

if [ ! -f vendor/bin/phpunit ]; then
    # https://github.com/sebastianbergmann/phpunit/tags
    curl -L https://phar.phpunit.de/phpunit-12.4.1.phar -o vendor/bin/phpunit
    chmod +x vendor/bin/phpunit
fi

printf "\nRunning PHPUnit ...\n\n"
XDEBUG_MODE=coverage vendor/bin/phpunit -c vendor/endroid/quality/phpunit.xml.dist --testdox --coverage-html=tests/coverage

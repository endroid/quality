#!/usr/bin/env bash

set -e

if [ -f bin/phpunit ]; then
    bin/phpunit
    exit
fi

if [ ! -f vendor/bin/phpunit ]; then
    printf "\nRunning PHPUnit ...\n\n"
    curl -L https://phar.phpunit.de/phpunit-8.4.phar -o vendor/bin/phpunit
    chmod +x vendor/bin/phpunit
fi

php -d pcov.enabled=1 vendor/bin/phpunit -c vendor/endroid/test/phpunit.xml.dist --testdox --coverage-html=tests/coverage
